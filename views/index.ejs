<%- include("partials/header.ejs") %>

    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <ul class="list-group" style="background-color: black;">
                    <% todos.forEach((todo)=> { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center" style="background-color: black;">
                            <a href="/todos/<%=todo.title%>" class="btn" style="color: rgb(247, 243, 243);">
                                <%= todo.title %>
                            </a>
                            <span class="badge rounded-pill <%= todo.completed ? 'bg-success' : 'bg-danger' %>">
                                <%= todo.completed ? "done" : "undone" %>
                            </span>
                        </li>
                        <% }) %>
                </ul>
            </div>
        </div>
    </div>

    <%- include("partials/footer.ejs") %>